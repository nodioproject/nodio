+media-query(only screen, max-width $mobileWidth)
  #dapps
    .page-header
      padding 0 0 50px
    .page-content
      padding-bottom 0
    .illustration
      padding 30px 0
      width 100%
      margin auto
      display block
      float none
    .left-side
      width 100%
      margin 0
      float none
      .text
        text-align justify
    .page-footer
      padding-top 0
    .center-capture
      top 0px
      width 30%
    .left-capture
    .right-capture
      top 30px
    
$start = 720px
$step = 60px
for $i in 0..30
  $height = $start + $i * $step
  if $i < 3
    $before = 0 * $step
    $after = $i * $step
  else 
    $before = floor(($i - 1) / 2) * $step
    $after = floor(($i + 2) / 2) * $step
    
  +media-query(only screen, min-height $height)
    #dapps .page-content
      &:before
        height $before
      &:after
        height $after