@import "../variables.styl"

/* Product steady styles */
#product-steady
  .illustration
    &.device
      retina-image('~images/pages/product-steady.png', 100% auto, "@2x")
    &.border
      retina-image('~images/pages/product-steady-border.png', 100% auto, "@2x")

for $i in 0..30
  $height = $expand_height + $i * $expand_height_step
  $content = floor($i / 2) * $expand_height_step
  $texts = ceil(floor(($i + 1) / 2) * $expand_height_step / 2)
  +media-query(only screen, min-height $height)
    #product-steady 
      .page-content
        margin-top $content
      .texts
        &:before
        &:after
          height $texts