@import "../variables.styl"

/* Video styles */
video
  fixed 50% false false 50%
  size auto
  min-width 0
  min-height 0
  z-index -1
  opacity 0
  transform translate(-50%, -50%)
  background-color #000
  &.show
    opacity 1
    z-index 1000
  &.full
    min-width 100%
    min-height 100%
    transition min-width 0.5s linear,
               min-height 0.5s linear